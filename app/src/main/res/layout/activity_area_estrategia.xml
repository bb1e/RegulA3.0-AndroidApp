<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_area_estrategia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_estrategias"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".AreaEstrategia">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollViewAreaEstrategias"
            android:background="@drawable/bellow_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/toolbarAreaEstrategia">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewAreaFBTitulo"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome da Estrategia"
                    android:gravity="center|center_vertical"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="12pt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAreaFBTitulo">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area ocupação:"
                            android:gravity="center|center_vertical"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="9pt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewAreaFBTitulo" />

                        <TextView
                            android:id="@+id/tituloAO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reatividade alvo"
                            android:layout_marginTop="5dp"
                            android:gravity="center|center_vertical"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="6pt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView27" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tituloTipoAlvo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center|center_vertical"
                            android:text="Reatividade alvo:"
                            android:textColor="@android:color/black"
                            android:textSize="9pt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:layout_editor_absoluteY="177dp" />

                        <TextView
                            android:id="@+id/tipoAlvo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reatividade alvo"
                            android:layout_marginTop="5dp"
                            android:gravity="center|center_vertical"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="6pt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tituloTipoAlvo" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:gravity="center|center_vertical"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="9pt"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout13"/>

                <LinearLayout
                    android:id="@+id/linearLayoutResumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView28">

                    <LinearLayout
                        android:id="@+id/linearLayoutQtdAvaliacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/tracejado_amarelo"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewAreaFBTitulo">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:text="Número de feedbacks"
                            android:textColor="@android:color/black"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/textViewQtdAvaliacoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="7pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutMediaAvaliacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/tracejado_amarelo"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutQtdAvaliacoes">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:text="Média do feedback"
                            android:textColor="@android:color/black"
                            android:textSize="7pt" />

                        <ImageView
                            android:id="@+id/imageViewMediaFeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/smiley_meh" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutFB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/tracejado_amarelo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutResumo"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último Feedback: "
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="7pt"/>
                    <TextView
                        android:id="@+id/textViewUltimaAvaliacoesRealizou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UTILIZOU"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="6pt"/>
                    <TextView
                        android:id="@+id/textViewUltimaAvaliacoesData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATA"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="6pt"/>

                    <ImageView
                        android:id="@+id/imageViewUltimoFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_happy" />
                    <TextView
                        android:id="@+id/textViewUltimaAvaliacoesComentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMENTARIO"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="6pt"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewHistoricoComentariosTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Histórico de Comentários"
                    android:gravity="center|center_vertical"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="11pt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutFB"/>

                <ListView
                    android:id="@+id/listViewHistoricoComentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:maxHeight="250dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHistoricoComentariosTitulo" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <include
            android:id="@+id/toolbarAreaEstrategia"
            layout="@layout/toolbar"/>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_area_estrategia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>